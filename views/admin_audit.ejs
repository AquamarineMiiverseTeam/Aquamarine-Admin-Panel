<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquamarine Admin Panel</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">

    <script src="/js/pjax.js"></script>
    <script src="/js/admin.js"></script>
</head>

<body>
    <%- include("partials/navbar.ejs") %>
    <div class="wrapper">
        <div class="header">
            <span>Audit Log</span>
        </div>
    
        <table id="admin_table" class="table table-striped table-bordered" style="padding: 20px; white-space: pre-wrap;">
            <thead class="thead-dark">
                <tr>
                    <th>Time Created</th>
                    <th>User</th>
                    <th>Mii</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < actions.length; i++) { const action=actions[i];%>
    
                    <tr>
                        <td><%= action.create_time %></td>
                        <td><%= action.nnid %></td>
                        <td><img width="48px" src="https://mii-images.account.nintendo.net/<%= action.mii_hash %>_normal_face.png"></td>
                        <td><% switch (action.action_type) {
                            case "created_community":
                                %>Created Community: <%
                                break;

                            case "altered_community":
                                %>Altered Community: <%
                                break;
                            
                            case "deleted_community":
                                %>Deleted Community: <%
                                break;

                            case "moderated_post":
                                %>Moderated Post: <%
                                break;
                        
                            case "created_account":
                                %>Created Account: <%
                                break;

                            case "altered_account":
                                %>Altered Account: <%
                                break;
                            
                            case "deleted_account":
                                %>Deleted Account: <%
                                break;

                            case "banned_account":
                                %>Banned Account: <%
                                break;

                            case "stopped_service":
                                %>Stopped Service: <%
                                break;

                            case "started_service":
                                %>Started Service: <%
                                break;

                            case "restarted_service":
                                %>Restarted Service: <%
                                break;

                            default:
                                break;
                        } %><%= action.action_description %></td>
                    </tr>
                <%} %>
            </tbody>
        </table>
        
    </div>
    
</body>

<script>
    loadPostTimes();
</script>

</html>