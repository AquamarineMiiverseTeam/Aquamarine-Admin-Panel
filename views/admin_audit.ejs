<%- include("./partials/header.ejs") %>

<body>
    <%- include("partials/navbar.ejs") %>
    <div class="alert alert-success" role="alert" style="display: none;">
        <strong>Community Created!</strong>
        <span>StreetPass Plaza</span>
    </div>
    
    <div class="alert alert-info" role="alert" style="display: none;">
        <strong>Community Edited!</strong>
        <span>StreetPass Plaza</span>
    </div>
    <div class="wrapper">
        <table id="admin_table" class="table table-striped table-bordered" style="padding: 20px; white-space: pre-wrap;">
            <thead class="thead-dark">
                <tr>
                    <th>Time Created</th>
                    <th>User</th>
                    <th>Mii</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < actions.length; i++) { const action=actions[i];%>
    
                    <tr>
                        <td><%= action.create_time %></td>
                        <td><%= action.nnid %></td>
                        <td><img width="48px" src="https://mii-images.account.nintendo.net/<%= action.mii_hash %>_normal_face.png"></td>
                        <td><% switch (action.action_type) {
                            case "created_community":
                                %>Created Community: <%
                                break;

                            case "altered_community":
                                %>Altered Community: <%
                                break;
                            
                            case "deleted_community":
                                %>Deleted Community: <%
                                break;

                            case "moderated_post":
                                %>Moderated Post: <%
                                break;
                        
                            case "created_account":
                                %>Created Account: <%
                                break;

                            case "altered_account":
                                %>Altered Account: <%
                                break;
                            
                            case "deleted_account":
                                %>Deleted Account: <%
                                break;

                            case "banned_account":
                                %>Banned Account: <%
                                break;

                            case "stopped_service":
                                %>Stopped Service: <%
                                break;

                            case "started_service":
                                %>Started Service: <%
                                break;

                            case "restarted_service":
                                %>Restarted Service: <%
                                break;

                            default:
                                break;
                        } %><%= action.action_description %></td>
                    </tr>
                <%} %>
            </tbody>
        </table>
        
    </div>
    
</body>

<script>
    loadPostTimes();
</script>

</html>