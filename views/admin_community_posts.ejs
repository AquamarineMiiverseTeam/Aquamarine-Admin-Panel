<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquamarine Admin Panel</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin.css">

    <script src="/js/pjax.js"></script>
    <script src="/js/admin.js"></script>
</head>

<body>
    <div class="wrapper">
        <%- include("partials/navbar.ejs") %>
        <div class="header">
            <span>
                <%= community.name %>'s Posts
            </span>
        </div>
    
        <table id="admin_table" class="table table-striped table-bordered" style="padding: 20px;">
            <thead class="thead-dark">
                <tr>
                    <th>Time Created</th>
                    <th>Mii</th>
                    <th>ID</th>
                    <th>Community ID</th>
                    <th>Content</th>
                    <th>Screenshot ?</th>
                    <th>Title ID</th>
                    <th>Posted From</th>
                    <th>Is Title Owned ?</th>
                    <th>PID</th>
                    <th>Topic Tag ?</th>
                    <th>Spoiler</th>
                    <th>Moderated</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < posts.length; i++) { const post=posts[i];%>
                    <tr>
                        <td><%= post.create_time %></td>
                        <td><img width="75px" src="<%= post.mii_image %>"></td>
                        <td><%= post.id %></td>
                        <td><%= post.community_id %></td>
                        <td><% if (post.body) {%> <%= post.body %> <%} else {%> <img src="/img/paintings/<%= post.id %>.png"> <%} %></td>
                        <td><% if (post.screenshot) {%> <img width="100px" src="/img/screenshots/<%= post.id %>.jpg"> <%}%> </td>
                        <td><%= post.title_id %></td>
                        <td><%= post.posted_from %></td>
                        <td><%= post.title_owned %></td>
                        <td><%= post.pid %></td>
                        <td><%= post.topic_tag %></td>
                        <td><%= post.spoiler %></td>
                        <td><%= post.moderated %></td>
                        <td>
                            <% if (post.moderated == 0) {%>
                                <button postid="<%= post.id %>" style="width: 125px; margin-top: 15px;" type="button" class="btn btn-danger" onclick="moderatePost(this.attributes[0].value)">Moderate</button>
                            <% } else { %>
                                <button postid="<%= post.id %>" style="width: 125px; margin-top: 15px;" type="button" class="btn btn-success" onclick="moderatePost(this.attributes[0].value)">Unmoderate</button>
                            <% } %>
                            
                        </td>
                    </tr>
                <%} %>
            </tbody>
        </table>
        
    </div>

</body>

<script>
    loadPostTimes();
</script>

</html>